{%extends "base.jinja2"%}

{%block title%}Home{%endblock%}

{%block body%}
<!-- Page Header -->
<!-- Set background image for this header on the line below. -->
<header class="intro-header" style="background-image: url({{url_for('static', filename='img/home-bg.jpg')}})">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Flask</h1>
          <hr class="small">
          <span class="subheading">Example Flask Web App</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  {%include 'messages.jinja2'%}

  {%if session.get('is_authenticated')%}
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <form role="form" action="{{url_for('home')}}" method="POST">
        <h2 class="post-title">You are now logged in!</h2>
        	<div class="form-group">
            	<button type="submit" name='button_id' value='button_id' class="btn btn-primary">A Button</button>
            </div> 
        </form>
      </div>
    </div>
  {%else%}
     <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <h2>Log in with google!</h2>
        <hr />
      </div>
    </div>
  {%endif%}
</div>
<hr />
{%endblock%}
